{
    "compilerOptions": {
      "target": "ES2022",
      "module": "es2022",
      "strict": true,
      "jsx": "preserve",
      "importHelpers": true,
      "moduleResolution": "node",
      "allowJs": true,
      "noImplicitAny": false,
      "skipLibCheck": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "sourceMap": true,
      "baseUrl": ".",
      "paths": {
        "@*": [
          "public/*"
        ]
      },
    "lib": [
        "esnext",
        "dom",
        "dom.iterable",
        "scripthost",
        "ES2022",
      ]
    },
    "include": [
      "public/**/*.ts",
      "public/**/*.tsx",
      "tests/**/*.ts",
      "tests/**/*.tsx"
, "public/app.ts"    ],
    "exclude": [
      "node_modules"
    ]
  }